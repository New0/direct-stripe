    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 8777
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Listen for direct-stripe XDebug",
            "type": "php",
            "request": "launch",
            "port": 8777,
            "log": true,
            "pathMappings": {
              ".": "${workspaceFolder}/",
            }
        }
    ]
}
